{
  "version": 2,
  "builds": [
    {
      "src": "src/main/resources/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/main/resources/static/$1"
    }
  ],
  "env": {
    "BACKEND_URL": "@backend_url"
  }
}

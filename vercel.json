{
  "version": 2,
  "builds": [
    {
      "src": "pom.xml",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/**/*.java": {
      "runtime": "java17"
    }
  },
  "env": {
    "SPRING_PROFILES_ACTIVE": "production",
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "DB_USERNAME": "@db_username",
    "DB_PASSWORD": "@db_password",
    "PORT": "8080"
  }
}

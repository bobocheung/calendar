{
  "version": 2,
  "builds": [
    {
      "src": "target/*.jar",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/target/calendar-task-system-1.0.0.jar"
    },
    {
      "src": "/(.*)",
      "dest": "/src/main/resources/static/$1"
    }
  ],
  "env": {
    "SPRING_PROFILES_ACTIVE": "production",
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret"
  }
}
